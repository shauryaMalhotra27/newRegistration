<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingPage"
    android:background="@drawable/login_signup_background"
    >

    <TextView
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_shape"
        android:padding="10dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="SETTINGS"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/navBar"
        app:layout_constraintLeft_toRightOf="@id/homeIcon"
        app:layout_constraintTop_toTopOf="@id/navBar"
        />
    <TextView
        android:id="@+id/homeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_icon"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/navBar"
        app:layout_constraintLeft_toLeftOf="@id/navBar"
        app:layout_constraintTop_toTopOf="@id/navBar" />

    <TextView
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/navBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
         android:paddingHorizontal="15dp"
        android:textColor="@color/white"
        android:background="@drawable/dialouge_bg_orange"
        android:textSize="40sp"
        android:text="EDIT PROFILE"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/uploadAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/dialouge_bg_orange"
        android:paddingHorizontal="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:text="UPLOAD AVATAR"
        android:gravity="center"
        />

    <Button
        android:id="@+id/logoutSettingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/uploadAvatar"
        app:layout_constraintLeft_toLeftOf="@id/uploadAvatar"
        app:layout_constraintRight_toRightOf="@id/uploadAvatar"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"

        />

</androidx.constraintlayout.widget.ConstraintLayout>