<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passwordPage"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#CDDC39">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textSize="50sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR CREDENTIALS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"

        />

    <TextView
        android:id="@+id/namePassTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="NAME SHOWN HERE"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:layout_marginHorizontal="20dp"

        />
    <TextView
        android:id="@+id/agePassTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="AGE SHOWN HERE"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        android:layout_marginHorizontal="20dp"

        />

    <TextView
        android:id="@+id/genderPassTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="GENDER SHOWN HERE"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/emailPassTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:paddingStart="20dp"
        android:hint="EMAIL SHOWN HERE"
        android:textAlignment="textStart"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"

        />

    <Button
        android:id="@+id/changeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/black"
        android:text="change credentials here "
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:textSize="20sp"/>
    <EditText

        android:id="@+id/pass1ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        android:hint="WRITE PASSWORD"
        android:layout_marginHorizontal="20dp"/>
    <EditText
        android:id="@+id/pass2ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        android:hint="CONFIRM PASSWORD"
        android:layout_marginHorizontal="20dp"/>

    <Button

        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="50dp"/>






</LinearLayout>